					"referenceName": "sql_database",
					"type": "LinkedServiceReference",
					"parameters": {
						"databaseName": {
							"value": "@dataset().dbName",
							"type": "Expression"
						},
						"serverName": "xdsqlserver01.database.windows.net",
						"userName": "xdadmin",
						"userPassword": "Nxd$$30709"
					}
				},
				"parameters": {
					"schema": {
